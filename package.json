{
  "name": "kaltura-mux",
  "version": "2.0.0",
  "author": "Mux, Inc.",
  "description": "Mux analytics plugin for Kaltura players",
  "main": "dist/kaltura-mux.js",
  "scripts": {
    "nsp": "nsp check",
    "clean": "rm -rf dist build",
    "mkdirs": "mkdir -p build dist",
    "lint": "eslint 'src/*.js' --quiet",
    "test": "npm-run-all lint",
    "build": "npm-run-all nsp clean test mkdirs build:browserify build:bannerize build:uglify build:dist",
    "build:bannerize": "bannerize build/kaltura-mux.debug.js --banner=scripts/banner.ejs",
    "build:browserify": "browserify src/index.js --standalone initKalturaMux -o build/kaltura-mux.debug.js",
    "build:uglify": "uglifyjs build/kaltura-mux.debug.js --comments --mangle --compress -o build/kaltura-mux.js",
    "build:dist": "cp build/kaltura-mux.js dist/kaltura-mux.js",
    "start": "babel-node scripts/server.js",
    "deploy": "npm run build && babel-node scripts/deploy.js"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-versionify"
    ]
  },
  "dependencies": {
    "lodash.assign": "^4.0.9",
    "mux-embed": "^2.0.46"
  },
  "devDependencies": {
    "aws-sdk": "^2.2.37",
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "babelify": "^7.2.0",
    "bannerize": "^1.0.0",
    "browserify": "^11.2.0",
    "browserify-versionify": "^1.0.6",
    "connect": "^3.4.0",
    "eslint": "^2.13.1",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.2",
    "eslint-plugin-standard": "^1.3.2",
    "global": "^4.3.0",
    "json": "^9.0.3",
    "npm-run-all": "~1.2.0",
    "nsp": "^2.4.0",
    "portscanner": "^1.0.0",
    "serve-static": "^1.10.0",
    "uglify-js": "^2.5.0"
  }
}
